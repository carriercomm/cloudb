<project>
    <shortName>cloudb</shortName>
    <fullName>DeveelDB in the Cloud</fullName>
    <version>1.0</version>
    <installerFilename>${product_shortname}-${product_version}-${platform_name}.${platform_exec_suffix}</installerFilename>
    <preInstallationActionList>
        <setInstallerVariable name="dotNetVersionReq" value="2.0"/>
        <setInstallerVariable name="dotNetVersion" value=""/>

	<!-- .NET 1.0 -->
	<actionGroup>
            <actionList>
                <registryGet key="HKEY_LOCAL_MACHINE\SOFTWARE\Microsoft\.NETFramework\policy\v1.0" name="3705" variable="dotNetValue"/>
                <setInstallerVariable name="dotNetVersion" value="1.0">
                    <ruleList>
                        <compareText logic="equals" text="${dotNetValue}" value="3321-3705"/>
                    </ruleList>
                </setInstallerVariable>
            </actionList>
            <ruleList>
                <compareVersions logic="less_or_equal" version1="${dotNetVersionReq}" version2="1.0"/>
            </ruleList>
        </actionGroup>

	<!-- .NET 1.1 -->
	<actionGroup>
            <actionList>
                <registryGet key="HKEY_LOCAL_MACHINE\SOFTWARE\Microsoft\.NETFramework\policy\v1.1" name="4322" variable="dotNetValue"/>
                <setInstallerVariable name="dotNetVersion" value="1.1">
                    <ruleList>
                        <compareText logic="equals" text="${dotNetValue}" value="3706-4322"/>
                    </ruleList>
                </setInstallerVariable>
            </actionList>
            <ruleList>
                <compareVersions logic="less_or_equal" version1="${dotNetVersionReq}" version2="1.1"/>
            </ruleList>
        </actionGroup>

	<!-- .NET 2.0 -->
	<actionGroup>
            <actionList>
                <registryGet key="HKEY_LOCAL_MACHINE\SOFTWARE\Microsoft\.NETFramework\policy\v2.0" name="50727" variable="dotNetValue"/>
                <setInstallerVariable name="dotNetVersion" value="2.0">
                    <ruleList>
                        <compareText logic="equals" text="${dotNetValue}" value="50727-50727"/>
                    </ruleList>
                </setInstallerVariable>
            </actionList>
            <ruleList>
                <compareVersions logic="less_or_equal" version1="${dotNetVersionReq}" version2="2.0"/>
            </ruleList>
        </actionGroup>

	<!-- .NET 3.0 -->
	<actionGroup>
            <actionList>
                <registryGet key="HKEY_LOCAL_MACHINE\SOFTWARE\Microsoft\NET Framework Setup\NDP\v3.0\Setup" name="InstallSuccess" variable="dotNetValue"/>
                <setInstallerVariable name="version" value="3.0">
                    <ruleList>
                        <compareText logic="equals" text="${dotNetValue}" value="1"/>
                    </ruleList>
                </setInstallerVariable>
            </actionList>
            <ruleList>
                <compareVersions logic="less_or_equal" version1="${required}" version2="3.0"/>
            </ruleList>
        </actionGroup>

	<!-- .NET 3.5 -->
	<actionGroup>
            <actionList>
                <registryGet key="HKEY_LOCAL_MACHINE\SOFTWARE\Microsoft\NET Framework Setup\NDP\v3.5" name="Install" variable="dotNetValue"/>
                <setInstallerVariable name="dotNetVersion" value="3.5">
                    <ruleList>
                        <compareText logic="equals" text="${dotNetValue}" value="1"/>
                    </ruleList>
                </setInstallerVariable>
            </actionList>
            <ruleList>
                <compareVersions logic="less_or_equal" version1="${dotNetReq}" version2="3.5"/>
            </ruleList>
        </actionGroup>
        <throwError text="This application requires .NET ${required} or greater">
            <ruleList>
                <compareText logic="equals" text="${version}" value=""/>
            </ruleList>
        </throwError>
    </preInstallationActionList>
    <allowComponentSelection>1</allowComponentSelection>
    <cdromDirectory>${product_shortname}-${product_version}</cdromDirectory>
    <deleteOnExit>1</deleteOnExit>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <outputDirectory>.</outputDirectory>
    <requireInstallationByRootUser>1</requireInstallationByRootUser>
    <saveRelativePaths>1</saveRelativePaths>
    <singleInstanceCheck>1</singleInstanceCheck>
    <vendor>Deveel</vendor>
    <componentList>
        <component>
            <name>default</name>
            <description>Default Component</description>
            <canBeEdited>0</canBeEdited>
            <selected>1</selected>
            <show>0</show>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <shortcutList>
                        <shortcut>
                            <comment>Uninstall</comment>
                            <exec>${installdir}/${uninstallerName}</exec>
                            <icon></icon>
                            <name>Uninstall ${product_fullname}</name>
                            <path>${installdir}</path>
                            <platforms>all</platforms>
                            <runAsAdmin>0</runAsAdmin>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon></windowsIcon>
                            <windowsPath>${installdir}</windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileslinux</name>
                    <platforms>linux</platforms>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileswindows</name>
                    <platforms>windows</platforms>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfilesosx</name>
                    <platforms>osx</platforms>
                </folder>
                <folder>
                    <description>Binaries</description>
                    <destination>${installdir}/bin</destination>
                    <name>bindir</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../build/cloudb.dll</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Uninstall ${product_fullname}</comment>
                    <name>Uninstall ${product_fullname}</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
        <component>
            <name>admintools</name>
            <description>Cloud Administration Tools</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>Binaries</description>
                    <destination>${installdir}/bin</destination>
                    <name>bindir</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../build/cadmin.exe</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../libs/deveel-cli.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../libs/deveelrl.dll</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Command line application to manage an instance of the cloud</comment>
                    <name>Cloud Administration Console</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/${bindir}/cadmin.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath></windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
        <component>
            <name>machinenode</name>
            <description>Machine Node Service</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>Binaries</description>
                    <destination>${installdir}/bin</destination>
                    <name>bindir</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../build/mnode.exe</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../libs/deveel-cli.dll</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Standalone Console Machine Node Service</comment>
                    <name>Machine Node</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/mnode.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}</windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
        <component>
            <name>clients</name>
            <description>Clients</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
        </component>
        <component>
            <name>paths</name>
            <description>Cloud Paths</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>Binaries</description>
                    <destination>${installdir}/bin</destination>
                    <name>bindir</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../build/cloudbase.dll</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
            </folderList>
        </component>
    </componentList>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value></value>
            <default>${platform_install_prefix}/deveel/${product_shortname}-${product_version}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>1</mustBeWritable>
            <mustExist>0</mustExist>
            <width>40</width>
        </directoryParameter>
    </parameterList>
</project>

